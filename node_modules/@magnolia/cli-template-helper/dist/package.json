{
	"name": "@magnolia/cli-template-helper",
	"version": "1.4.0",
	"description": "A Magnolia CLI helper package for @magnolia/cli-create-page-plugin and @magnolia/cli-create-component-plugin",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky || true",
		"test": "npm run build && node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"build": "npm run lint && tsc && cpy package.json dist && cpy lib/locales dist && cpy ./resources dist",
		"depcheck": "depcheck",
		"lint": "eslint .",
		"lint:fix": "npm run lint -- --fix",
		"format": "prettier \"./**/*.{ts,js,json}\" --ignore-path .prettierignore --ignore-unknown --check",
		"format:write": "npm run format -- --write"
	},
	"lint-staged": {
		"**/*.{ts,js,json}": [
			"npm run format:write",
			"npm run lint:fix"
		]
	},
	"author": "Magnolia International Ltd.",
	"license": "SEE LICENSE IN LICENSE.txt",
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/decompress": "^4.2.7",
		"@types/fs-extra": "^11.0.4",
		"@types/inquirer": "^9.0.9",
		"@types/lodash": "^4.17.20",
		"@types/node": "^24.5.2",
		"@types/npm-registry-fetch": "^8.0.8",
		"cpy-cli": "^6.0.0",
		"depcheck": "^1.4.7",
		"eslint": "^9.36.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.2.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@inquirer/core": "^10.2.2",
		"@magnolia/cli-helper": "^1.1.1",
		"@magnolia/cli-plugin-template": "^1.2.1",
		"axios": "^1.12.2",
		"commander": "^12.1.0",
		"decompress": "^4.2.1",
		"execa": "^9.6.0",
		"fs-extra": "^11.3.2",
		"handlebars": "^4.7.8",
		"inquirer": "^12.9.6",
		"is-valid-var-name": "^1.0.2",
		"json5": "^2.2.3",
		"lodash": "^4.17.21",
		"npm-registry-fetch": "^19.0.0",
		"ora": "^9.0.0",
		"promised-handlebars": "^2.0.1",
		"simple-git": "^3.28.0",
		"winston": "^3.17.0",
		"yaml": "^2.8.1"
	}
}
