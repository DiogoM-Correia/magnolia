{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"outDir": "dist",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "dist",
		"skipLibCheck": true
	},
	"include": ["**/*"],
	"exclude": [
		"node_modules",
		"dist"
	]
}
