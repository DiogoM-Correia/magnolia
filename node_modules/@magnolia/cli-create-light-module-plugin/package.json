{
	"name": "@magnolia/cli-create-light-module-plugin",
	"version": "1.0.3",
	"description": "A plugin for Magnolia CLI to create a new light module",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky || true",
		"test": "npm run build && node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"build": "npm run lint && tsc && cpy package.json dist && cpy resources dist && cpy lib/locales dist",
		"depcheck": "depcheck",
		"lint": "eslint .",
		"lint:fix": "npm run lint -- --fix",
		"format": "prettier \"./**/*.{ts,js,json}\" --ignore-path .prettierignore --ignore-unknown --check",
		"format:write": "npm run format -- --write"
	},
	"lint-staged": {
		"**/*.{ts,js,json}": [
			"npm run format:write",
			"npm run lint:fix"
		]
	},
	"keywords": [],
	"author": "Magnolia International Ltd.",
	"license": "SEE LICENSE IN LICENSE.txt",
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/fs-extra": "^11.0.4",
		"@types/inquirer": "^9.0.9",
		"@types/node": "^24.5.2",
		"cpy-cli": "^6.0.0",
		"depcheck": "^1.4.7",
		"eslint": "^9.36.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.2.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@magnolia/cli-helper": "^1.1.1",
		"@magnolia/cli-plugin-template": "^1.2.1",
		"commander": "^12.1.0",
		"fs-extra": "^11.3.2",
		"inquirer": "^12.9.6",
		"winston": "^3.17.0"
	},
	"type": "module"
}
